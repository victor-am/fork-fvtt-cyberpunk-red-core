{{trace "CPR-ITEM-SHEET.HBS"}}
<form class="item-sheet">
  <div class="item-top-pane">
    <div class="item-image-section">
      <div class="item-image-block">
        <img src="{{item.img}}" class="item-image-block-img" data-edit="img" />
      </div>
    </div>
    <div class="item-header-section items-list flexcol">
      <li class="item flexrow">
        <div class="item-name text-large text-bold text-left text-padding-left">
          {{item.name}}{{#if (isUpgradable item.type)}}{{#if item.data.data.isUpgraded}}<sup><i title="{{localize "CPR.upgraded"}}" class="fab fa-uniregistry"></sup></i>{{/if}}{{/if}}
        </div>
        <div class="item-detail text-right text-padding-right">
           {{#if (isDebug)}}({{item.id}}){{/if}}
          {{localize (findConfigValue "objectTypes" item.type)}}{{#if (compare data.data.source "!==" "")}} | {{data.data.source}}{{/if}}
        </div>
        {{> (generatePartial "systems/cyberpunk-red-core/templates/item/parts/header/cpr-VAR.hbs" item.type) this}}
      </li>
      <li></li>
      <li></li>
    </div>
  </div>
  <div class="item-bottom-pane">
    <div class="item-bottom-tabs-section">
      <nav class="navtabs-item cpr-tabs nav" data-group="primary">
        <div class="tab-pink-underlay">
          <a class="tab-label text-small tab-indent" data-tab="item-description">{{localize "CPR.description"}}</a>
        </div>
        <div class="tab-pink-underlay">
          <a class="tab-label text-small tab-indent" data-tab="item-settings">{{localize "CPR.settings"}}</a>
        </div>
      </nav>
    </div>
    <div class="item-bottom-content-section">
      <div class="tab item-description-grid" data-group="primary" data-tab="item-description">
        {{> (generatePartial "systems/cyberpunk-red-core/templates/item/parts/description/cpr-VAR.hbs" item.type) this}}
      </div>
      <div class="tab item-settings-grid" data-group="primary" data-tab="item-settings">
        {{> "systems/cyberpunk-red-core/templates/item/parts/settings/common/cpr-item-settings.hbs" this}}
      </div>
    </div>

  </div>
</form>
{{trace "END CPR-ITEM-SHEET.HBS"}}
