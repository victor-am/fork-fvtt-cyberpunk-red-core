<form>
  {{!-- Item Header Navigation --}}
  {{> "systems/cyberpunk-red-core/templates/item/parts/cpr-header.hbs"}}
  {{!-- Item Sheet Navigation --}}
  <div class="nav-container black-bg">
    <nav class="tabs" data-group="primary">
      <a class="navtab center-text bold white-fg" data-tab="description">{{localize "CPR.description"}}</a>
      <a class="navtab center-text bold white-fg" data-tab="details">{{localize "CPR.details"}}</a>
    </nav>
  </div>
  {{!-- Item Sheet Body --}}
  <section class="content">
    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{> "systems/cyberpunk-red-core/templates/item/parts/cpr-info-pane-armor.hbs"}}
      {{> "systems/cyberpunk-red-core/templates/item/parts/cpr-description.hbs"}}
    </div>
    {{!-- Details Tab --}}
    <div class="tab" data-group="primary" data-tab="details">
      {{!-- Physical Item stats --}}
      {{> "systems/cyberpunk-red-core/templates/item/parts/details/cpr-details-physical.hbs"}}
      {{!-- Armor specific data points --}}
      {{!-- ARMOR PENALTY --}}
      <div>
        {{localize "CPR.armorpenalty"}}: <input name="data.penalty" class="" type="text" value="{{data.penalty}}">
      </div>
      {{!-- HEAD ARMOR CHECKBOX --}}
      <div>
        <label class="label-text">{{localize "CPR.head"}} {{localize "CPR.armor"}}</label>
        {{#if data.isHeadLocation}}
        <a class="item-checkbox" data-target="data.isHeadLocation"><i class="far fa-check-circle"></i></a>
        {{!-- LOCATION SP --}}
        <div>
          {{localize "CPR.armor"}} {{localize "CPR.sp"}}: <input name="data.headLocation.sp" class="" type="number"
            value="{{data.headLocation.sp}}">
        </div>
        {{!-- LOCATION ABLATION --}}
        <div>
          {{localize "CPR.ablation"}}: <input name="data.headLocation.ablation" class="" type="number"
            value="{{data.headLocation.ablation}}">
        </div>
        {{else}}
        <a class="item-checkbox" data-target="data.isHeadLocation"><i class="far fa-circle"></i></a>
        {{/if}}
      </div>

      {{!-- BODY ARMOR LOCATION CHECKBOX --}}
      <div>
        <label class="label-text">{{localize "CPR.bodylocation"}} {{localize "CPR.armor"}}</label>
        {{#if data.isBodyLocation}}
        <a class="item-checkbox" data-target="data.isBodyLocation"><i class="far fa-check-circle"></i></a>
        {{!-- LOCATION SP --}}
        <div>
          {{localize "CPR.armor"}} {{localize "CPR.sp"}}: <input name="data.bodyLocation.sp" class="" type="number"
            value="{{data.bodyLocation.sp}}">
        </div>
        {{!-- LOCATION ABLATION --}}
        <div>
          {{localize "CPR.ablation"}}: <input name="data.bodyLocation.ablation" class="" type="number"
            value="{{data.bodyLocation.ablation}}">
        </div>
        {{else}}
        <a class="item-checkbox" data-target="data.isBodyLocation"><i class="far fa-circle"></i></a>
        {{/if}}
      </div>
      {{!-- EQUIPPED --}}
      <div>
        <label class="label-text">{{localize "CPR.equipped"}}</label>
        <select name="data.equipped" data-dtype="{{data.equipped}}">
          {{#select data.equipped}}
          {{#each (findConfigObj "equipped") as |vic v|}}
          <option value="{{v}}">{{localize vic}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>
    </div>
  </section>
  </div>
</form>