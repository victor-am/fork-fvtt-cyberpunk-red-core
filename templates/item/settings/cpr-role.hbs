{{cprTrace "START ITEM SETTINGS CPR-ROLE.HBS"}}
      {{!--Item Name Settings--}}
      {{!-- Role Item Settings--}}
      <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
          {{localize "CPR.itemSheet.role.mainAbilityName"}}
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
          <input name="system.mainRoleAbility" class="" data-dtype="{{item.system.mainRoleAbility}}" value="{{item.system.mainRoleAbility}}" type="text">
        </div>
      </li>
      <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
          {{localize "CPR.itemSheet.role.abilityRank"}}
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
          <input name="system.rank" class="" data-dtype="{{item.system.rank}}" value="{{item.system.rank}}" type="number">
        </div>
      </li>
      <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
          {{localize "CPR.itemSheet.role.hasRoll"}}
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
          {{#if item.system.hasRoll}}
          <a class="item-checkbox" data-target="system.hasRoll"><i class="far fa-check-circle"></i></a>
          {{else}}
          <a class="item-checkbox" data-target="system.hasRoll"><i class="far fa-circle"></i></a>
          {{/if}}
        </div>
      </li>
      {{#if item.system.hasRoll}}
      <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
          {{localize "CPR.itemSheet.role.addRoleAbilityRankQuestion"}}
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
          {{#if item.system.addRoleAbilityRank}}
          <a class="item-checkbox" data-target="system.addRoleAbilityRank"><i class="far fa-check-circle"></i></a>
          {{else}}
          <a class="item-checkbox" data-target="system.addRoleAbilityRank"><i class="far fa-circle"></i></a>
          {{/if}}
        </div>
      </li>
      <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
          {{localize "CPR.global.generic.stat"}}
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
          <select name="system.stat" data-dtype="{{item.system.stat}}">
            {{#select item.system.stat}}
              <optgroup label = "{{localize "CPR.itemSheet.role.specialOptions"}}">
                {{#each (cprFindConfigObj "roleSpecialOptions") as |option o|}}
                {{#if (cprCompare o "!==" "varying")}}
                  <option value="{{o}}">{{localize option}}</option>
                {{/if}}
                {{/each}}
              </optgroup>
              <optgroup label = "{{localize "CPR.itemSheet.role.statList"}}">
                {{#each (cprFindConfigObj "statList") as |stat s|}}
                  <option value="{{s}}">{{localize stat}}</option>
                {{/each}}
              </optgroup>
            {{/select}}
          </select>
        </div>
      </li>
      <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
          {{localize "CPR.itemSheet.role.skill"}}
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
          <select name="system.skill" data-dtype="{{item.system.skill}}">
            {{#select item.system.skill}}
              <optgroup label = "{{localize "CPR.itemSheet.role.specialOptions"}}">
                {{#each (cprFindConfigObj "roleSpecialOptions") as |option o|}}
                  <option value="{{o}}">{{localize option}}</option>
                {{/each}}
              </optgroup>
              <optgroup label = "{{localize "CPR.itemSheet.role.skillList"}}">
                {{#each (cprSort (cprGetProp item.system 'relativeSkills') "name") as |skill| }}
                  <option value="{{skill.name}}">{{localize skill.name}}</option>
                {{/each}}
              </optgroup>
            {{/select}}
          </select>
        </div>
      </li>
      {{/if}}
      <div class="item flexrow setting-name text-nowrap">
          <a class="select-role-bonuses text-bold">{{localize "CPR.itemSheet.role.configureRollBonuses"}}<i class="text-smallest text-super fas fa-wrench"></i></a>
          {{#if (cprCompare item.system.bonusRatio "!==" 1)}}{{localize "CPR.itemSheet.role.bonusRatio"}} - 1:{{item.system.bonusRatio}}{{/if}}
      </div>
      <div class="compatible-ammo">
        {{#each item.system.universalBonuses as |bonus|}}
          <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap text-padding-left">
                &nbsp;{{localize (cprFindConfigValue "universalBonuses" bonus)}}
            </div>
          </li>
        {{/each}}
        {{#each (cprSort item.system.bonuses "system.stat") as |bonus|}}
          <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap text-padding-left">
                &nbsp;{{#if bonus.system.core}}{{localize bonus.name}}{{else}}{{bonus.name}}{{/if}} ({{localize (cprFindConfigValue "statList" bonus.system.stat)}})
            </div>
          </li>
        {{/each}}
      </div>
<div class="item-role-section item-role-grid">
  <li class="items-header flexrow">
    <span class="item-name role-name fg-white bg-black text-nowrap text-padding-left">{{localize "CPR.global.generic.name"}}</span>
    <span class="item-detail role-rank fg-white bg-black text-nowrap">{{localize "CPR.itemSheet.role.rank"}}</span>
    <span class="item-detail role-rank fg-white bg-black text-nowrap">{{localize "CPR.itemSheet.role.multiplier"}}</span>
    <span class="item-detail role-stat fg-white bg-black text-nowrap">{{localize "CPR.global.generic.stat"}}</span>
    <span class="item-detail role-skill fg-white bg-black text-nowrap">{{localize "CPR.itemSheet.role.skill"}}</span>
    <span class="item-detail role-bonuses fg-white bg-black text-nowrap">{{localize "CPR.itemSheet.role.bonuses"}}</span>
    <span class="item-detail role-actions fg-white bg-black text-nowrap">
      <a class="role-ability-action" data-action-type="create" data-action-target="-1"><i class="fas fa-plus-circle text-padding-right" title={{localize "CPR.itemSheet.role.newRoleAbility"}}></i></a>
    </span>
  </li>
    <div class="role-list-content">
      <ol class="items-list">
        {{#each (cprSort item.system.abilities "name") as |ability|}}
          <li class="item role-name flexrow">
            <div class="item-name text-nowrap">{{ability.name}}</div>
            <div class="item-detail role-rank text-nowrap">
              {{ability.rank}}
            </div>
            <div class="item-detail role-multiplier text-nowrap">
              {{#if (cprCompare ability.multiplier "!==" "--")}}x{{/if}}{{ability.multiplier}}
            </div>
            <div class="item-detail role-stat text-nowrap">
              {{#if (cprCompare ability.stat "===" "--")}}
              {{localize "CPR.global.generic.notApplicable"}}
              {{else}}
              {{localize (cprFindConfigValue "statList" ability.stat)}}
              {{/if}}
            </div>
            <div class="item-detail role-skill text-nowrap">
              {{#if ability.skill.system.core}}
              {{localize (cprSplitJoinCoreSkills ability.skill)}}
              {{else}}
              {{ability.skill.name}}
              {{/if}}
              {{#if (cprCompare (cprCompare ability.skill "===" "--") "||" (cprCompare ability.skill "===" "varying"))}}
              {{localize (cprFindConfigValue "roleSpecialOptions" ability.skill)}}
              {{/if}}
            </div>
            <div class="item-detail role-bonuses text-nowrap">
              <a class="select-subrole-bonuses" data-item-name="{{ability.name}}" title="{{localize "CPR.itemSheet.role.configureRollBonuses"}}"><i class="fas fa-wrench"></i></a>
            </div>
            <div class="item-detail role-actions text-nowrap">
              <a class="role-ability-action" data-action-type="edit" data-action-target="{{ability.index}}"><i class="fas fa-edit fg-black" title={{localize "CPR.itemSheet.role.editRoleAbility"}}></i></a>
              <a class="role-ability-action" data-action-type="delete" data-action-target="{{ability.index}}"><i class="fas fa-trash-alt fg-red" title={{localize "CPR.itemSheet.role.deleteRoleAbility"}}></i></a>
            </div>
          </li>
        {{/each}}
{{cprTrace "END CPR-ROLE.HBS"}}

