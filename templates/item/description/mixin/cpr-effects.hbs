{{cprTrace "ITEM-DESC-MIXIN CPR-EFFECTS.HBS"}}
{{#if (cprCompare (cprSizeOf item.system.effects) ">" 3)}}
        <div class="item-summary-line">
            <span class="text-bold summary-name">{{localize "CPR.itemSheet.effects.effects"}}:</span>
            <span class="summary-value">{{cprSizeOf item.system.effects}}</span>
        </div>
{{else}}
    {{#each item.system.effects}}
        {{!-- "effects" is a Map, so "this" is now an Active Effects object within the #each loop! --}}
            <hr>
            {{#if this.disabled}}
              <span class="fg-grey">
            {{/if}}
            <div class="item-summary-line">
                <span class="text-bold summary-name">{{this.label}}</span>
                <span class="summary-value">{{#if (cprIsDebug)}}({{this._id}}){{/if}}</span>
            </div>

            {{#if (cprCompare (cprSizeOf this.system.changes) ">" 3)}}
            <div class="text-nowrap">
                <span class="text-bold summary-nam text-nowrap">{{localize "CPR.itemSheet.effects.effects"}}:</span>
                <span class="summary-value text-nowrap">{{cprSizeOf this.system.changes}}</span>
            </div>
            {{else}}
                {{#each this.system.changes}}
                    {{!-- "this" is now an individual mod for the AE object --}}
                    <div class="item-summary-line">
                        <span class="summary-value summary-effect-name">
                            {{cprGetChangeNameByKey ../../item.data (lookup ../data.flags.cyberpunk-red-core.changes @index) this.key}}:
                        </span>
                        <span class="summary-value summary-effect-value">
                            {{#if this.value}}
                                {{cprEffectModMode this.mode this.value}}{{this.value}}
                            {{else}}
                                0
                            {{/if}}
                        </span>
                    </div>
                {{/each}}
            {{/if}}
            {{#if this.disabled}}
              </span>
            {{/if}}
        {{#if @last}}<hr>{{/if}}
    {{/each}}
{{/if}}
{{cprTrace "END CPR-EFFECTS.HBS"}}
