<div class="item-info-pane">
    {{!-- IS PHYSICAL ITEM? ---}}
    <div class="info-pane-item">
        {{localize "CPR.price"}}: {{data.price.market}}
    </div>
    <div class="info-pane-item">
        {{localize "CPR.sp"}}:
        <div>{{#if data.isBodyLocation}}
            Body ({{data.bodyLocation.sp}})
            {{/if}}
            {{#if data.isHeadLocation}}
            Head ({{data.headLocation.sp}})
            {{/if}}
        </div>
    </div>
    <div class="info-pane-item">
        {{localize "CPR.ablation"}}:
        <div>{{#if data.isBodyLocation}}
            {{localize "CPR.bodylocation"}} ({{data.bodyLocation.ablation}})
            {{/if}}
            {{#if data.isHeadLocation}}
            {{localize "CPR.head"}} ({{data.headLocation.ablation}})
            {{/if}}
        </div>
    </div>
    <div class="info-pane-item">
        {{localize "CPR.penalty"}}: 
        {{#if (compare (math "abs" data.penalty) ">" 0)}}
            -{{math "abs" data.penalty}}
        {{else}}
            {{localize "CPR.none"}}
        {{/if}}
    </div>
</div>