{{trace "CPR-ARMOR.HBS"}}
<div class="item-description-tab">
    <div class="item-summary-section">
        <div class="item-summary-line">
            <span class="text-bold summary-name">{{localize "CPR.price"}}:</span>
            <span class="summary-value">{{data.data.price.market}}</span>
        </div>
        <div class="item-summary-line">
            <span class="text-bold summary-name">{{localize "CPR.market"}}:</span>
            <span class="summary-value">{{localize (findConfigValue "itemPriceCategory" data.data.price.category)}}</span>
        </div>
        {{#if data.data.isHeadLocation}}
        <div class="item-summary-line">
            <span class="text-bold summary-name">{{localize "CPR.headsp"}}:</span>
            <span class="summary-value">{{data.data.headLocation.sp}}</span>
        </div>
        <div class="item-summary-line">
            <span class="text-bold summary-name">&nbsp;{{localize "CPR.ablation"}}:</span>
            <span class="summary-value">{{data.data.headLocation.ablation}}</span>
        </div>
        {{/if}}
        {{#if data.data.isBodyLocation}}
        <div class="item-summary-line">
            <span class="text-bold summary-name">{{localize "CPR.bodysp"}}:</span>
            <span class="summary-value">{{data.data.bodyLocation.sp}}</span>
        </div>
        <div class="item-summary-line">
            <span class="text-bold summary-name">&nbsp;{{localize "CPR.ablation"}}:</span>
            <span class="summary-value">{{data.data.bodyLocation.ablation}}</span>
        </div>
        {{/if}}
    </div>
    <div class="item-description-section">
        {{editor content=data.data.description.value target="data.description.value" button=true owner=owner
        editable=editable}}
    </div>
</div>
{{trace "END CPR-ARMOR.HBS"}}
