        </div>
        <div class="item-summary-line">
            <span class="text-bold summary-name">{{localize "CPR.type"}}:</span>
            <span class="summary-value">{{localize (findConfigValue "clothingType" data.type)}}</span>
        </div> --}}
        <div class="item-summary-line">
            <span class="text-bold summary-name">{{localize "CPR.quality"}}:</span>
            <span class="summary-value">{{localize (findConfigValue "clothingQuality" data.quality)}}</span>
        </div>
    </div>
    <div class="item-description-section">
        {{editor content=data.description.value target="data.description.value" button=true owner=owner
        editable=editable}}
    </div>
</div>
