{{!-- Cyberdeck Item Settings--}}

{{!-- Cyberdeck Quality Settings--}}
<li class="item flexrow">
    <div class="item flexrow setting-name text-nowrap">
        {{localize "CPR.cyberdeck"}} {{localize "CPR.quality"}}
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
        <select name="data.quality" data-dtype="{{data.data.quality}}">
            {{#select data.data.quality}}
                {{#each (findConfigObj "itemQuality") as |quality q| }}
                    <option value="{{q}}">{{localize quality}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
</li>

{{!-- Cyberdeck Program Slots Settings--}}
<li class="item flexrow">
    <div class="item flexrow setting-name text-nowrap">
        {{localize "CPR.hardwareprogramslots"}}
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
        <input name="data.slots" class="" type="number" value="{{data.data.slots}}">
    </div>
</li>

{{!-- Cyberdeck Installed Programs Settings--}}
<li class="item flexrow">
    <div class="item flexrow setting-name text-nowrap text-bold">
        <a class="select-installed-programs" data-item-prop="select-installed-programs">
            {{localize "CPR.configureinstalledprograms"}}
            <i class="text-smallest text-super fas fa-wrench"></i>
        </a>
    </div>
    <div class="item flexrow setting-name text-nowrap">
        {{localize "CPR.availableslots"}}: {{data.data.availableSlots}}
    </div>
</li>
<div class="installed-programs">

</div>
{{#each data.data.programs.installed as |program|}}
    <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
            {{#if (listContains "speed,attack,defense" program.data.class)}}
                &nbsp;{{program.name}} ({{localize program.data.class}}) &nbsp;
                <a class="program-uninstall" data-item-id="{{program._id}}">
                    <i class="fas fa-folder-minus fg-red" title="{{localize "CPR.eraseprogram"}}"></i>
                </a>
            {{else}}
                &nbsp;{{program.name}} ({{localize (findConfigValue "programClassList" program.data.class)}}) &nbsp;
                <a class="program-uninstall" data-item-id="{{program._id}}">
                    <i class="fas fa-folder-minus fg-red" title="{{localize "CPR.eraseprogram"}}"></i>
                </a>
            {{/if}}
        </div>
    </li>
{{/each}}