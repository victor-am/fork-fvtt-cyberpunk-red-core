<form>
    <div class="item-settings-tab">
        <div class="item-settings-section">
            <ol class="items-list">

                {{!--Item Name Settings--}}
                {{> "systems/cyberpunk-red-core/templates/item/parts/settings/common/cpr-item-name.hbs" this}}

                {{!-- Physical Item Settings--}}
                {{> "systems/cyberpunk-red-core/templates/item/parts/settings/common/cpr-physical-item.hbs" this}}

                {{!-- Vehicle Item Settings--}}
                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.itemSheet.vehicle.tags"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.tags" class="" type="text" value="{{data.data.tags}}"
                            placeholder="License Plate No.">
                    </div>
                </li>

                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.itemSheet.vehicle.structuralSamagePoints"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.sdp" class="" type="text" value="{{data.data.sdp}}" placeholder="50">
                    </div>
                </li>

                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.global.vehicles.seats"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.seats" class="" type="text" value="{{data.data.seats}}" placeholder="50">
                    </div>
                </li>

                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.global.vehicles.combatSpeed"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.speedCombat" class="" type="text" value="{{data.data.speedCombat}}"
                            placeholder="50">
                    </div>
                </li>

                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.itemSheet.vehicle.speedNarrative"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.speedNarrative" class="" type="text" value="{{data.data.speedNarrative}}"
                            placeholder="50">
                    </div>
                </li>
            </ol>
        </div>
    </div>
</form>
