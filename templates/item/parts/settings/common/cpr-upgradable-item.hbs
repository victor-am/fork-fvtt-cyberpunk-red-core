{{#if (compare this.item.type "===" "weapon")}}
<li class="item flexrow">
    <div class="item flexrow setting-name text-nowrap">
        {{localize "CPR.itemSheet.weapon.attachmentSlots"}} ({{localize "CPR.itemSheet.common.availableSlots"}}: {{data.data.availableSlots}})
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
        <input name="data.attachmentSlots" class="" type="number" value="{{data.data.attachmentSlots}}">
    </div>
</li>
{{/if}}

<li class="item flexrow">
    <div class="item flexrow setting-name text-nowrap">
        <a class="select-item-upgrades" data-item-prop="select-item-upgrades">
            {{localize "CPR.itemSheet.common.itemUpgrades"}}
            {{#if (compare data.type "===" "weapon")}} &#38; {{localize "CPR.itemSheet.weapon.attachments"}}{{/if}}
            <i class="text-smallest text-super fas fa-wrench"></i>
        </a>
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
    </div>
</li>
{{#if data.data.isUpgraded}}
<hr>
{{#each data.data.upgrades as |upgrade|}}
<li class="item flexrow" data-item-id="{{upgrade._id}}" draggable="false">
    <div class="item-name flexrow setting-name text-nowrap">
        <a class="name item-view">{{upgrade.name}}</a>
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
        {{localize "CPR.itemSheet.common.itemUpgradeSize"}}: {{upgrade.data.size}}
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
      REMOVE UPGRADE ICON
    </div>
</li>
{{/each}}
<hr>
{{/if}}
