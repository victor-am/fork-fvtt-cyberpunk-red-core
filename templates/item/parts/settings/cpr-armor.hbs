<form>
    <div class="item-settings-tab">
        <div class="item-settings-section">
            <ol class="items-list">

                {{!--Item Name Settings--}}
                {{> "systems/cyberpunk-red-core/templates/item/parts/settings/common/cpr-item-name.hbs" this}}

                {{!-- Physical Item Settings--}}
                {{> "systems/cyberpunk-red-core/templates/item/parts/settings/common/cpr-physical-item.hbs" this}}

                {{!-- Armor Item Settings--}}

                {{!-- Armor Equipped Setting --}}
                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.equipped"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <select name="data.equipped" data-dtype="{{data.equipped}}">
                            {{#select data.equipped}}
                            {{#each (findConfigObj "equipped") as |vic v|}}
                            <option value="{{v}}">{{localize vic}}</option>
                            {{/each}}
                            {{/select}}
                        </select>
                    </div>
                </li>
                {{!-- Armor Penalty Settings--}}
                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.armorpenalty"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.penalty" class="" type="text" value="{{data.penalty}}">
                    </div>
                </li>
                {{!--Head Armor Settings--}}
                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.head"}} {{localize "CPR.armor"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        {{#if data.isHeadLocation}}
                        <a class="item-checkbox" data-target="data.isHeadLocation"><i
                                class="far fa-check-circle"></i></a>
                        {{else}}
                        <a class="item-checkbox" data-target="data.isHeadLocation"><i class="far fa-circle"></i></a>
                        {{/if}}
                    </div>
                </li>
                {{#if data.isHeadLocation}}
                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.armor"}} {{localize "CPR.sp"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.headLocation.sp" class="" type="number" value="{{data.headLocation.sp}}">
                    </div>
                </li>
                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.ablation"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.headLocation.ablation" class="" type="number"
                            value="{{data.headLocation.ablation}}">
                    </div>
                </li>
                {{/if}}
                {{!-- Body Armor Settings--}}
                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.bodylocation"}} {{localize "CPR.armor"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        {{#if data.isBodyLocation}}
                        <a class="item-checkbox" data-target="data.isBodyLocation"><i
                                class="far fa-check-circle"></i></a>
                        {{else}}
                        <a class="item-checkbox" data-target="data.isBodyLocation"><i class="far fa-circle"></i></a>
                        {{/if}}
                    </div>
                </li>
                {{#if data.isBodyLocation}}
                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.armor"}} {{localize "CPR.sp"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.bodyLocation.sp" class="" type="number" value="{{data.bodyLocation.sp}}">
                    </div>
                </li>
                <li class="item flexrow">
                    <div class="item flexrow setting-name text-nowrap">
                        {{localize "CPR.ablation"}}
                    </div>
                    <div class="item flexrow setting-value text-nowrap item-end">
                        <input name="data.bodyLocation.ablation" class="" type="number"
                            value="{{data.bodyLocation.ablation}}">
                    </div>
                </li>
                {{/if}}
            </ol>
        </div>
    </div>
</form>