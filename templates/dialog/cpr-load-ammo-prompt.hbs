{{cprTrace "CPR-LOAD-AMMO-PROMPT.HBS"}}
<form>
    {{localize "CPR.dialog.loadAmmo.selectAmmoToLoadInto"}} {{this.weapon.name}}:
    <div>
        <select name="selectedAmmo">
            {{!-- ONLY DISPLAY CYBERWARE OF SAME TYPE AS OPTIONAL --}}
            {{#if (cprCompare weapon.system.magazine.ammoId "!==" "")}}
            <option value="">{{localize "CPR.dialog.loadAmmo.unload"}} {{localize "CPR.global.itemTypes.weapon"}}</option>
            {{/if}}
            {{#each this.ammoList as |ammo|}}
            <option value="{{ammo._id}}">{{ammo.name}} ({{localize (cprFindConfigValue "ammoType"
                ammo.system.type)}})</option>
            {{/each}}
        </select>
    </div>
</form>
{{cprTrace "END CPR-LOAD-AMMO-PROMPT.HBS"}}
