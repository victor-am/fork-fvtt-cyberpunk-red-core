{{trace "CPR-VERIFY-ROLL-GENERIC-PROMPT.HBS"}}
<form>


    <ol class="items-list">
        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.roll"}} {{localize "CPR.title"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="rollTitle" class="" type="text" data-dtype="String" value={{rollTitle}}>
            </div>
        </li>

        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.roll"}} {{localize "CPR.type"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="rollType" class="" type="text" data-dtype="String" value={{rollType}}>
            </div>
        </li>


        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.stat"}} {{localize "CPR.value"}} ({{localize stat}}):
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="statValue" class="" type="number" data-dtype="Number" value={{statValue}}>
            </div>
        </li>


        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.skill"}} {{localize "CPR.value"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="skillValue" class="" type="number" data-dtype="Number" value={{skillValue}}>
            </div>
        </li>


        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.mods"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="mods" class="" type="text" data-dtype="String" value={{mods}}>
            </div>
        </li>


        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.shouldrollcriticals"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="calculateCritical" class="" type="checkbox" data-dtype="Checkbox" checked>
            </div>
        </li>
    </ol>
</form>
{{trace "END CPR-VERIFY-ROLL-GENERIC-PROMPT.HBS"}}
