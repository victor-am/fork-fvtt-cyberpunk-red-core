{{log "VERIFY-ROLL-DAMAGE-PROMPT.HBS"}}
<form>
    <div>
        {{localize "CPR.tellthemtosayhello"}}! {{localize "CPR.roll"}} {{localize "CPR.damage"}} {{localize "CPR.with"}} "{{rollTitle}}", Choomba!
    </div>
    <ol class="items-list">
        {{#if (listContains "assaultRifle,smg,heavySmg" weaponType)}}
        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.autofire"}}?
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input type="checkbox" id="isAutofire" name="isAutofire" {{#if isAutofire}} checked{{/if}}>
            </div>
        </li>
        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.multiplier"}}:
            </div>
        <div class="item flexrow setting-value text-nowrap item-end">
            <input type="number" class="number" name="autofireMultiplier" data-dtype="Number" value=1
                max="{{#if (compare weaponType "===" "assaultRifle")}}4{{else}}3{{/if}}" min="1">
        </div>
        {{/if}}
        
        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.aimedshot"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                
                <input name="isAimed" class="" type="checkbox" data-dtype="Checkbox"{{#if isAimed}} checked{{/if}}>
            </div>
        </li>

        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.aimfor"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <select name="location">
                    {{!-- ONLY DISPLAY CYBERWARE OF SAME TYPE AS OPTIONAL --}}
                    {{#each (findConfigObj "aimedLocation") as |loc l|}}
                    <option value="{{l}}" {{#if  (compare ../location "===" l)}}selected{{/if}}>{{localize loc}}</option>
                    {{/each}}
                </select>
            </div>
        </li>
        

        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.mods"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="mods" class="" type="text" data-dtype="String" value="{{mods}}">
            </div>
        </li>
    </ol>
</form>
{{log "END VERIFY-ROLL-DAMAGE-PROMPT.HBS"}}