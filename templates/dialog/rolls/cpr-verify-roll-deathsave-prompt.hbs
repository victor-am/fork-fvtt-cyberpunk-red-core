{{log "VERIFY-ROLL-DEATHSAVE-PROMPT.HBS"}}
<form>
    <div>
        {{localize "CPR.rollingfor"}} "{{rollTitle}}", Choomba!
    </div>
    <ol class="items-list">
        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.deathpenalty"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="penalty" class="" type="number" data-dtype="Number" value={{penalty}}>
            </div>
        </li>

        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.base"}} {{localize "CPR.deathpenalty"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="basePenalty" class="" type="number" data-dtype="Number" value={{basePenalty}}>
            </div>
        </li>
    </ol>
</form>
{{log "END VERIFY-ROLL-STAT-PROMPT.HBS"}}