{{log "VERIFY-ROLL-ATTACK-PROMPT.HBS"}}
<form>
    <div>
        {{localize "CPR.rollingfor"}} "{{rollTitle}}", Choomba!
    </div>

    <ol class="items-list">
        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.stat"}} {{localize "CPR.value"}} ({{localize statName}}):
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="statValue" class="" type="number" data-dtype="Number" value={{statValue}}>
            </div>
        </li>

        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.skill"}} {{localize "CPR.value"}} ({{localize skillName}}):
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="skillValue" class="" type="number" data-dtype="Number" value={{skillValue}}>
            </div>
        </li>

        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.mods"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="mods" class="" type="text" data-dtype="String" value="{{mods}}">
            </div>
        </li>

        {{#if (listContains "assaultRifle,smg,heavySmg" weaponType)}}
        {{#unless isAimed}}
        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.autofire"}} ({{localize "CPR.skilllevel"}}: {{getProp (findObj extraVars "name"
                "Autofire") "level"}}):
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input type="checkbox" id="autofire" name="autofire">
            </div>
        </li>
        {{/unless}}
        {{/if}}

        {{#if isAimed}}
        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.aimfor"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <select name="location">
                    {{!-- ONLY DISPLAY CYBERWARE OF SAME TYPE AS OPTIONAL --}}
                    {{#each (findConfigObj "aimedLocation") as |location l|}}
                    <option value="{{l}}">{{localize location}}</option>
                    {{/each}}
                </select>
            </div>
        </li>
        {{/if}}

        <li class="item flexrow">
            <div class="item flexrow setting-name text-nowrap">
                {{localize "CPR.shouldrollcriticals"}}:
            </div>
            <div class="item flexrow setting-value text-nowrap item-end">
                <input name="calculateCritical" class="" type="checkbox" data-dtype="Checkbox" checked>
            </div>
        </li>
    </ol>
</form>
{{log "END VERIFY-ROLL-ATTACK-PROMPT.HBS"}}