{{trace "CPR-SELECT-ROLES-PROMPT.HBS"}}
<form>
  <ol class="items-list">
    <li class="item flexrow">
      <div class="item flexrow setting-name">
        <span class="text-bold text-nowrap">{{localize "CPR.dialog.selectRoles.roleName"}}</span>
      </div>
      <div class="item flexrow setting-value">
       <span class="text-bold text-nowrap text-center text-space-around">{{localize "CPR.dialog.selectRoles.activeRole"}}</span>
      </div>
      <div class="item flexrow setting-value">
        <span class="text-bold text-nowrap text-center text-space-around">{{localize "CPR.dialog.selectRoles.roleExperience"}}</span>
      </div>
    </li>
    {{#each roles as |cprRole roleName|}}
    <li class="item flexrow">
      <div class="item flexrow setting-name text-nowrap">
        {{localize cprRole}}
      </div>
      <div class="item flexrow setting-value text-nowrap text-space-around">
        {{#if (listContains ../actor.roles roleName)}}
        <span class="text-bold text-nowrap text-center text-space-around"><input type="radio" name="activeRole" value="{{roleName}}" checked></span>
        {{else}}
        <span class="text-bold text-nowrap text-center text-space-around"><input type="radio" name="activeRole" value="{{roleName}}"></span>
        {{/if}}
      </div>
      <div class="item flexrow setting-value text-nowrap text-space-around">
        {{#if (listContains ../actor.roles roleName)}}
        <span class="text-bold text-nowrap text-center text-space-around"><input type="checkbox" name="selectedRoles" value="{{roleName}}" checked></span>
        {{else}}
        <span class="text-bold text-nowrap text-center text-space-around"><input type="checkbox" name="selectedRoles" value="{{roleName}}"></span>
        {{/if}}
      </div>
    </li>
    {{/each}}
  </ol>
  <div>{{localize "CPR.dialog.selectRoles.multiClassRequirement"}}</div>
</form>
{{trace "END CPR-SELECT-ROLES-PROMPT.HBS"}}
