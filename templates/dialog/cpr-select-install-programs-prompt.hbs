{{cprTrace "START DIALOG CPR-SELECT-INSTALL-PROGRAMS-PROMPT.HBS"}}
<form>
  {{localize "CPR.dialog.selectInstallPrograms.selectInstalledPrograms"}} "{{cyberdeck.name}}", Choomba!
  <ol class="items-list">
    <li class="item flexrow">
      <div class="item flexrow setting-name">
        <span class="text-bold text-nowrap">{{localize "CPR.dialog.selectInstallPrograms.programs"}}</span>
      </div>
      <div class="item flexrow setting-value">
        <span class="text-bold text-nowrap text-align-last-end text-space-around">{{localize "CPR.dialog.common.select"}}</span>
      </div>
    </li>

    {{#each this.programList as |program|}}
    <li class="item flexrow">
      <div class="item flexrow setting-name text-nowrap">
        {{program.name}} ({{localize (cprFindConfigValue "programClassList" program.system.class)}})
      </div>
      <div class="item flexrow setting-value text-nowrap text-space-around">
        {{#if program.system.isInstalled}}
        <span class="text-bold text-nowrap text-align-last-end text-space-around"><input type="checkbox" name="selectedPrograms" value="{{program._id}}" checked></span>
        {{else}}
        <span class="text-bold text-nowrap text-align-last-end text-space-around"><input type="checkbox" name="selectedPrograms" value="{{program._id}}"></span>
        {{/if}}
      </div>
    </li>
    {{/each}}

  </ol>
</form>
{{cprTrace "END CPR-SELECT-INSTALL-PROGRAMS-PROMPT.HBS"}}
