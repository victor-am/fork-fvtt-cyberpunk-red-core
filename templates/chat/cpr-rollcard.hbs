        <i class="d10 nine black"></i>
        {{/if}}
        {{#if (eq criticalRoll -10)}}
        <i class="fas fa-minus"></i>
        <i class="d10 ten black"></i>
        {{/if}}
      {{/if}}
    </div>

    <div class="info-div right-text">
      {{#if (gt roleValue 0)}}
      <div>Ability: {{roleValue}}</div> 
      {{else}}
      <div>{{statName}} <strong>{{#if (gt statValue -1)}}+{{/if}}{{statValue}}</strong></div>
      <div>{{skillName}} <strong>{{#if (gt skillValue -1)}}+{{/if}}{{skillValue}}</strong></div>
      {{/if}}
      {{#if modsTotal }}
      {{!-- <div>Roll Modifiers: {{mods}}</div> --}}
      <div class="chat-rollTotal">Modifiers: <strong>{{modsTotal}}</strong></div>
      {{/if}}
    </div>
  </div>
</div>
{{/if}}
