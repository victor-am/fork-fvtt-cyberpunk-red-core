{{log "CPR-ROLLCARD.HBS"}}
{{log this}}
{{!-- If this is a damage roll --}}
{{#if (eq rollType "damage")}}
<div class="white-bg" data-roll-type="{{rollType}}">
  <div class="cpr-block horizontal half-height chat-rollTitle-{{rollType}}">
    <p class="center-text width-grow largest-text">{{rollTitle}} Damage</p>
  </div>

  {{!-- rollcard body --}}
  <div class="rollcard-body cpr-block rollcard">

    <div class="total-div right-text">
      <span class="massive-text">{{resultTotal}}{{#if wasCritical}}!{{/if}}</span>
    </div>

    <div class="dice-div large-text">
      {{#each diceResults as |die|}}
      {{log die}}
      {{#if (eq die 1)}}
      <i class="fas fa-dice-one"></i>
      {{/if}}
      {{#if (eq die 2)}}
      <i class="fas fa-dice-two"></i>
      {{/if}}
      {{#if (eq die 3)}}
      <i class="fas fa-dice-three"></i>
      {{/if}}
      {{#if (eq die 4)}}
      <i class="fas fa-dice-four"></i>
      {{/if}}
      {{#if (eq die 5)}}
      <i class="fas fa-dice-five"></i>
      {{/if}}
      {{#if (eq die 6)}}
      <i class="fas fa-dice-six"></i>
      {{/if}}
      {{/each}}
    </div>

    <div class="info-div right-text">
      {{#if wasCritical}}
      <span>Roll: {{diceTotal}}</span>
      <span>Criticals: {{crits}}</span>
      <span>Bonus Damage: {{bonusDamage}}</span>
      {{else}}
      <span>Roll: {{diceTotal}}</span>
      {{/if}}
      <span>Location: {{location}}</span>
      {{#if (gt mods 0)}}
      <span>Mods: {{mods}}</span>
      {{/if}}
    </div>
  </div>
</div>

{{!-- And if it's any other kind of roll --}}
{{else}}
<div class="white-bg" data-roll-type="{{rollType}}">
  <div class="cpr-block horizontal half-height chat-rollTitle-{{rollType}}">
    <p class="center-text width-grow largest-text">{{rollTitle}}</p>
  </div>

  {{!-- rollcard body --}}
  <div class="rollcard-body cpr-block rollcard">

    <div class="total-div right-text">
      <span class="massive-text">{{resultTotal}}{{#if wasCritical}}!{{/if}}</span>
    </div>

    <div class="dice-div">
        {{!-- die image for initialRoll --}}
        {{#if (eq initialRoll 1)}}
        <i class="d10 one"></i>
        {{/if}}
        {{#if (eq initialRoll 2)}}
        <i class="d10 two"></i>
        {{/if}}
        {{#if (eq initialRoll 3)}}
        <i class="d10 three"></i>
        {{/if}}
        {{#if (eq initialRoll 4)}}
        <i class="d10 four"></i>
        {{/if}}
        {{#if (eq initialRoll 5)}}
        <i class="d10 five"></i>
        {{/if}}
        {{#if (eq initialRoll 6)}}
        <i class="d10 six"></i>
        {{/if}}
        {{#if (eq initialRoll 7)}}
        <i class="d10 seven"></i>
        {{/if}}
        {{#if (eq initialRoll 8)}}
        <i class="d10 eight"></i>
        {{/if}}
        {{#if (eq initialRoll 9)}}
        <i class="d10 nine"></i>
        {{/if}}
        {{#if (eq initialRoll 10)}}
        <i class="d10 ten"></i>
        {{/if}}

      {{#if wasCritical}}
        {{!-- die image for criticalRoll --}}
        <i class="d10 one"></i>
      {{/if}}
    </div>

    <div class="info-div right-text">
      {{#if mods}}
      Roll Modifiers: {{mods}} <br>
      <div class="chat-rollTotal">Mods Total: {{modsTotal}}</div><br>
      {{/if}}
      {{#if (gt roleValue 0)}}
      Role Ability: {{roleValue}} <br>
      {{else}}
      {{statName}} +{{statValue}} <br>
      {{skillName}} +{{skillValue}} <br>
      {{/if}}
    </div>
  </div>
</div>
{{/if}}
{{log "END CPR-ROLLCARD.HBS"}}