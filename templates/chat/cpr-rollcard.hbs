        {{/if}}
        {{#if (eq initialRoll 3)}}
        <i class="d10 three"></i>
        {{/if}}
        {{#if (eq initialRoll 4)}}
        <i class="d10 four"></i>
        {{/if}}
        {{#if (eq initialRoll 5)}}
        <i class="d10 five"></i>
        {{/if}}
        {{#if (eq initialRoll 6)}}
        <i class="d10 six"></i>
        {{/if}}
        {{#if (eq initialRoll 7)}}
        <i class="d10 seven"></i>
        {{/if}}
        {{#if (eq initialRoll 8)}}
        <i class="d10 eight"></i>
        {{/if}}
        {{#if (eq initialRoll 9)}}
        <i class="d10 nine"></i>
        {{/if}}
        {{#if (eq initialRoll 10)}}
