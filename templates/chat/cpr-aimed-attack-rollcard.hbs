{{log "CPR-AIMED-ATTACK-ROLLCARD.HBS"}}
<div class="rollcard">
  <div class="rollcard-top">
    <div class="cpr-block chat-rollTitle-stat">
      <div class="text-center text-padding-top text-normal">{{rollTitle}}</div>
      <div class="text-center text-small">{{localize "CPR.aimedshot"}}</div>
    </div>
  </div>
  <div class="rollcard-bottom">
    <div class="cpr-block">
      <div class="d10-rollcard-data">
        <div class="d10-dice-div">
          {{!-- die image for initialRoll --}}
          {{#if criticalCard}}
          {{#if wasCritSuccess}}
          <img class="d10" src="systems/cyberpunk-red-core/icons/dice/red/d10_{{initialRoll}}_preem.svg">
          <i class="fas fa-plus"></i>
          {{else}}
          <img class="d10" src="systems/cyberpunk-red-core/icons/dice/red/d10_{{initialRoll}}_fail.svg">
          <i class="fas fa-minus"></i>
          {{/if}}
          <img class="d10" src="systems/cyberpunk-red-core/icons/dice/red/d10_{{math " abs" criticalRoll}}.svg">
          {{else}}
          <img class="d10" src="systems/cyberpunk-red-core/icons/dice/black/d10_{{initialRoll}}.svg">
          {{/if}}
        </div>
        <div class="d10-number-div">
          <span class="{{#if criticalCard}}fg-red text-bold{{/if}}">{{resultTotal}}</span>
        </div>
        <div class="d10-data-div">
          <div class="text-normal text-bold">{{localize "CPR.location"}}: {{localize (findConfigValue "aimedLocation" location)}}</div>
          <div class="d10-details-button text-center text-normal text-bold clickable" data-action="hide"
            data-hide-element="d10-data-details">{{localize "CPR.show"}} {{localize "CPR.details"}}</div>
          <div class="d10-data-details hide">
            
            <div class="text-normal text-bold">{{localize statName}} + {{statValue}}</div>
            <div class="text-normal text-bold">{{localize skillName}} + {{skillValue}}</div>
            {{#if mods}}
            <span class="text-normal text-nowrap">{{localize "CPR.rollmods"}}: {{mods}}</span>
            <div class="text-normal text-bold text-nowrap">{{localize "CPR.mods"}} {{localize "CPR.total"}}:
              {{totalMods}}</div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{log "END CPR-AIMED-ATTACK-ROLLCARD.HBS"}}