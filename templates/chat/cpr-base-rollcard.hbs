{{log "CPR-BASE-ROLLCARD.HBS"}}
<div class="rollcard-body">
  <div class="rollcard-top">
    <div class="cpr-block chat-rollTitle-{{rollType}}">
      <div class="text-center text-padding-top">{{rollTitle}}</div>
      {{#if (compare rollTitle "!==" skill)}}
      <div class="text-center text-small text-padding-bottom">{{skill}}</div>
      {{/if}}
    </div>
  </div>
  <div class="rollcard-bottom">
    {{!-- rollcard body --}}
    <div class="cpr-block">
      <div class="rollcard">
        <div class="dice-div">
          {{!-- die image for initialRoll --}}
          {{#if criticalCard}}
            <i class="d10 {{numToWord initialRoll}}"></i>
            {{#if wasCritSuccess}}
              <i class="fas fa-plus text-center"></i>
            {{else}}
              <i class="fas fa-minus text-center"></i>
            {{/if}}
            <i class="d10 {{numToWord (math "abs" criticalRoll)}}"></i>
          {{else}}
            <i class="d10 {{numToWord initialRoll}} black"></i>
          {{/if}}
        </div>
        <div class="total-div">
          <span class="{{#if criticalCard}}fg-red text-bold{{/if}}">{{resultTotal}}</span>
        </div>
        <div class="info-div">


          {{#if (compare roleValue ">" 0)}}
          {{localize "CPR.abilityrank"}}: {{roleValue}}<br>
          {{else}}
          {{localize (findConfigValue "statList" stat)}} + {{statValue}}<br>
          {{localize "CPR.skill"}} + {{skillValue}}<br>
          {{/if}}<br>
          {{#if mods}}
          <span class="text-nowrap">{{localize "CPR.rollmods"}}: {{mods}}</span>
          <div class="chat-rollTotal text-bold text-nowrap">{{localize "CPR.mods"}} {{localize "CPR.total"}}: {{modsTotal}}</div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
{{log "END CPR-BASE-ROLLCARD.HBS"}}