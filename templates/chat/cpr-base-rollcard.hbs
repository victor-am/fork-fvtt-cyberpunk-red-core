{{log "CPR-BASE-ROLLCARD.HBS"}}
<div class="rollcard">
  <div class="rollcard-top">
    <div class="cpr-block chat-rollTitle-stat">
      <div class="text-center text-padding-top text-normal">{{rollTitle}}</div>
    </div>
  </div>
  <div class="rollcard-bottom">
    <div class="cpr-block">
      <div class="{{die}}-rollcard-data">
        <div class="{{die}}-dice-div">
          {{!-- die image for initialRoll --}}
          {{#if criticalCard}}
          {{#if wasCritSuccess}}
          <img class="{{die}}" src="systems/cyberpunk-red-core/icons/dice/red/{{die}}_{{initialRoll}}_preem.svg">
          <i class="fas fa-plus"></i>
          {{else}}
          <img class="{{die}}" src="systems/cyberpunk-red-core/icons/dice/red/{{die}}_{{initialRoll}}_fail.svg">
          <i class="fas fa-minus"></i>
          {{/if}}
          <img class="{{die}}" src="systems/cyberpunk-red-core/icons/dice/red/{{die}}_{{math "abs" criticalRoll}}.svg">
          {{else}}
          <img class="{{die}}" src="systems/cyberpunk-red-core/icons/dice/black/{{die}}_{{initialRoll}}.svg">
          {{/if}}
        </div>
        <div class="{{die}}-number-div">
          <a><span class="{{#if mods}}clickable{{/if}}{{#if criticalCard}} fg-red text-bold{{/if}}" data-action="toggleVisibility" data-visible-element="{{die}}-data-details">{{resultTotal}}</span></a>
        </div>
        <div class="{{die}}-data-div">
          <div class="{{die}}-data-details hide">
            {{#if mods}}
            <span class="text-normal text-nowrap">{{localize "CPR.rollmods"}}: {{mods}}</span>
            <div class="text-normal text-bold text-nowrap">{{localize "CPR.mods"}} {{localize "CPR.total"}}: {{totalMods}}</div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{log "END CPR-BASE-ROLLCARD.HBS"}}