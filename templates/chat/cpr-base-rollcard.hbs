{{log "CPR-BASE-ROLLCARD.HBS"}}
<div class="rollcard-body">
  <div class="rollcard-top">
    <div class="cpr-block chat-rollTitle-{{rollType}}">
      <p class="text-center">{{rollTitle}}</p>
    </div>
  </div>
  <div class="rollcard-bottom">
    {{!-- rollcard body --}}
    <div class="cpr-block">
      <div class="rollcard">

        <div class="dice-div">
          {{!-- die image for initialRoll --}}
          <i class="d10 {{numToWord initialRoll}}"></i>

          {{#if wasCritical}}
          {{#if (compare criticalRoll ">=" 0)}}
          <i class="fas fa-plus"></i>
          {{else}}
          <i class="fas fa-minus"></i>
          {{/if}}
          <i class="d10 {{numToWord (math "abs" criticalRoll)}} black"></i>
          {{/if}}
        </div>
        <div class="total-div">
          <span class="{{#if wasCritical}}fg-red text-bold{{/if}}">{{resultTotal}}</span>
        </div>
        <div class="info-div">


          {{#if (compare roleValue ">" 0)}}
          {{localize "CPR.abilityrank"}}: {{roleValue}}<br>
          {{else}}
          {{localize (findConfigValue "statList" stat)}} + {{statValue}}<br>
          {{skill}} + {{skillValue}}<br>
          {{/if}}<br>
          {{#if mods}}
          {{localize "CPR.rollmodifiers"}}: {{mods}}
          <div class="chat-rollTotal text-bold">{{localize "CPR.mods"}} {{localize "CPR.total"}}: {{modsTotal}}</div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
{{log "END CPR-BASE-ROLLCARD.HBS"}}