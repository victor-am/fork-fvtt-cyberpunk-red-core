{{trace "CPR-CYBERDECK-ROLLCARD.HBS"}}
<div class="rollcard">
  <div class="rollcard-top">
    <div class="cpr-block chat-rollTitle-stat">
      <div class="text-center text-padding-top text-normal">
          {{rollTitle}}
      </div>
      <div class="text-center text-small">{{roleName}} {{localize "CPR.rolls.roleAbility"}}</div>
    </div>
  </div>
  <div class="rollcard-bottom">
    <div class="cpr-block">
      <div class="d10-rollcard-data">
        <div class="d10-dice-div">
          {{!-- die image for initialRoll --}}
          {{#if criticalCard}}
          {{#if wasCritSuccess}}
          <img class="d10" src="systems/cyberpunk-red-core/icons/dice/red/d10_{{initialRoll}}_preem.svg">
          <i class="fas fa-plus"></i>
          {{else}}
          <img class="d10" src="systems/cyberpunk-red-core/icons/dice/red/d10_{{initialRoll}}_fail.svg">
          <i class="fas fa-minus"></i>
          {{/if}}
          <img class="d10" src="systems/cyberpunk-red-core/icons/dice/red/d10_{{math "abs" criticalRoll}}.svg">
          {{else}}
          <img class="d10" src="systems/cyberpunk-red-core/icons/dice/black/d10_{{initialRoll}}.svg">
          {{/if}}
        </div>
        <div class="d10-number-div">
          <a><span class="clickable{{#if criticalCard}} fg-red text-bold{{/if}}" data-action="toggleVisibility" data-visible-element="d10-data-details">{{resultTotal}}</span></a>
        </div>
        <div class="d10-data-div">
          <div class="d10-data-details hide">
            <div class="text-normal text-nowrap">{{localize "CPR.rolls.abilityRank"}}: {{roleValue}}</div>

            {{#if statValue}}
            <div class="text-normal text-nowrap">{{localize "CPR.rolls.abilityStat"}} ({{localize (findConfigValue "statList" statName)}}): {{statValue}}</div>
            {{/if}}

            {{#if skillValue}}
            <div class="text-normal text-nowrap">{{localize "CPR.global.blackIce.type.other"}}: {{skillValue}}</div>
            {{/if}}

            {{#if mods}}
            <div class="text-normal text-nowrap">{{localize "CPR.rolls.rollMods"}}: {{mods}}</div>
            <div class="text-normal text-bold text-nowrap">{{localize "CPR.rolls.mods"}} {{localize "CPR.rolls.total"}}:
              {{totalMods}}</div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{trace "END CPR-CYBERDECK-ROLLCARD.HBS"}}
