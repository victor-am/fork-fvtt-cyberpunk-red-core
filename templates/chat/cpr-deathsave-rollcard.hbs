{{log "CPR-DEATHSAVE-ROLLCARD.HBS"}}
<div class="rollcard-body">
  <div class="rollcard-top">
    <div class="cpr-block chat-rollTitle-deathsave">
      <p class="text-center">{{rollTitle}}</p>
    </div>
  </div>
  <div class="rollcard-bottom">
    {{!-- rollcard body --}}
    <div class="cpr-block">
      <div class="rollcard">

        <div class="dice-div">
          {{!-- die image for initialRoll --}}
          <i class="d10 {{numToWord initialRoll}}"></i>
        </div>
        <div class="total-div">
          <span class="text-bold">{{resultTotal}}</span>
        </div>
        <div class="bottom-div text-right">
            {{localize "CPR.body"}}: {{bodyStat}}<br>
            {{#if (compare penalty "!==" 0)}}
                {{localize "CPR.deathpenalty"}}: {{penalty}}<br>
            {{/if}}
            {{#if (compare basePenalty "!==" 0)}}
                {{localize "CPR.critinjuries"}}: {{basePenalty}}<br>
            {{/if}}
            <div class="chat-rollTotal text-bold">{{localize "CPR.penalty"}} {{localize "CPR.total"}}: {{totalMods}}<br></div>
            <div class="text-massive text-center fg-{{#if (compare saveResult "===" "Success")}}green{{else}}red{{/if}}">{{saveResult}}</div>
        </div>
      </div>
    </div>
  </div>
</div>
{{log "END CPR-DEATHSAVE-ROLLCARD.HBS"}}