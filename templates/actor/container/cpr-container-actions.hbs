{{trace "CPR-CONTAINER-ACTIONS.HBS"}}
{{!-- Item purchase or take --}}
{{#if (compare item.data.data.amount ">" "1")}}
<a class="item-action" data-action-type="purchaseFraction">
  {{#if actor.data.flags.cyberpunk-red-core.items-free}}
    <i class="fas fa-hand-pointer" title="{{localize "CPR.containerSheet.action.takeItemPart"}}"></i>
  {{else}}
  <i class="fas fa-shopping-basket" title="{{localize "CPR.containerSheet.action.purchaseItemPart"}}"></i>
  {{/if}}
</a>
{{/if}}
<a class="item-action" data-action-type="purchase">
  {{#if actor.data.flags.cyberpunk-red-core.items-free}}
  <i class="fas fa-hand-paper" title="{{localize "CPR.containerSheet.action.takeItemAll"}}"></i>
  {{else}}
  <i class="fas fa-shopping-cart" title="{{localize "CPR.containerSheet.action.purchaseItemAll"}}"></i>
  {{/if}}
</a>
{{!-- Item deletion --}}
{{#if (compare isGM "||" actor.data.flags.cyberpunk-red-core.players-delete)}}
<a class="item-action" data-action-type="delete"><i class="fas fa-trash-alt fg-red" title="{{localize "CPR.actorSheets.commonActions.deleteItem"}}"></i></a>
{{/if}}
{{trace "END CPR-CONTAINER-ACTIONS.HBS"}}
