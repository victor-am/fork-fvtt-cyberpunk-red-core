{{trace "CPR-ITEM-CONTENT.HBS"}}
<li class="item flexrow" data-item-id="{{item.id}}" data-item-category="{{item.type}}" draggable="true">
  <div class="item-name text-nowrap">
    <a class="name item-edit" title="{{item.name}}&#13Click to view the item&#13Ctrl-Click to send to chat">{{item.name}}</a>&nbsp;
  </div>
  <div class="item-detail text-nowrap">
    {{item.data.data.amount}}
  </div>
  <div class="item-name gear-data text-nowrap">
    {{#if (compare item.data.data.amount ">" "1")}}
      {{#if (compare (compare item.type "===" "ammo") "&&" (compare (compare item.data.data.variety "!==" "grenade") "&&" (compare item.data.data.variety "!==" "rocket")))}}
        {{localize "CPR.containerSheet.items.priceListingSingleAll" price=item.data.data.price.market category=(localize (getProp (findConfigObj "itemPriceCategory") item.data.data.price.category)) priceAll=(math "product" item.data.data.price.market item.data.data.amount "0.1")}}
      {{else}}
        {{localize "CPR.containerSheet.items.priceListingSingleAll" price=item.data.data.price.market category=(localize (getProp (findConfigObj "itemPriceCategory") item.data.data.price.category)) priceAll=(math "product" item.data.data.price.market item.data.data.amount)}}
      {{/if}}
    {{else}}
      {{localize "CPR.containerSheet.items.priceListingSingle" price=item.data.data.price.market category=(localize (getProp (findConfigObj "itemPriceCategory") item.data.data.price.category))}}
    {{/if}}
  </div>
  <div class="item-end text-nowrap">
    {{> "systems/cyberpunk-red-core/templates/actor/container/cpr-container-actions.hbs" (mergeForPartialArg "item,actor,isGM" item actor isGM)}}
  </div>
</li>
{{trace "END CPR-ITEM-CONTENT.HBS"}}
