{{trace "CPR-MOOK-STATS.HBS"}}
{{!-- Partials to create stat-units from template --}}
{{#each data.stats as |stat s|}}
  <div class="mook-{{s}}-stat">
    <div>
      <a class="rollable" data-roll-type="stat" data-roll-title="{{s}}" title="{{localize CPR.clicktorollthisstat}}">
        {{localize (findConfigValue "statList" s)}}
      </a>  
    </div>
    <div class="block-data text-large">
      {{log s}}
      <input class="" name="data.stats.{{s}}.value" type="number" {{#if (compare s "===" "luck")}} readonly {{else}} value="{{this.value}}"{{/if}} />
    </div>  
  </div>
{{/each}}
{{trace "END CPR-MOOK-STATS.HBS"}}