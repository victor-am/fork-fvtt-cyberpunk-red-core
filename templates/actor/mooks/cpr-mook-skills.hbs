{{trace "CPR-MOOK-SKILLS.HBS"}}
<div class="bg-red fg-white flexrow">
  <span class="text-nowrap text-padding-left">
    {{localize "CPR.skills"}}
  </span>
  <span class="text-right">
    <a class="mod-mook-skill">
      <i class="fas fa-edit"></i>
    </a>
  </span>
</div>
<div class="bg-white fg-black text-padding-left">
  {{#each (sort actor.filteredItems.skill "name") as |skill s|}}
    {{#if (compare skill.data.level ">" 0)}}
      <span class="item" data-item-id="{{skill._id}}">
        <a class="rollable"  data-roll-type="skill" data-roll-title="{{skill.name}}">
          {{#if skill.data.core}}{{localize (splitJoinCoreSkills skill.name)}}{{else}}{{skill.name}}{{/if}} (+{{skill.data.level}}),
        </a> {{#if (compare skill.data.core "===" false)}}
                <a class="item-edit skill-custom" title="{{localize "CPR.editcustomskill"}}"><i class="fas fa-edit"></i></a>
                <a class="item-action skill-custom" title="{{localize "CPR.deletecustomskill"}}" data-action-type="delete"><i class="fas fa-trash-alt"></i></a>
                {{/if}}
      </span>
    {{/if}}
  {{/each}}
</div>
{{trace "END CPR-MOOK-SKILLS.HBS"}}
