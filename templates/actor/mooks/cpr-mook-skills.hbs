{{trace "CPR-MOOK-SKILLS.HBS"}}
<div class="bg-red fg-white flexrow">
  <span class="text-nowrap text-padding-left">
    {{localize "CPR.skills"}}
  </span>
  <span class="text-right">
    <a class="mod-mook-skill">
      <i class="fas fa-edit"></i>
    </a>
  </span>
</div>
<div class="bg-white fg-black text-padding-left">
  {{#each (sort (getMookSkills actor.data.filteredItems.skill) "name") as |skill s|}}
    {{#if (compare skill.data.data.level ">" 0)}}
      <span class="item deletable" data-item-id="{{skill.id}}" tabindex="0">
        <a class="rollable"  data-roll-type="skill" data-roll-title="{{skill.name}}" title="{{localize "CPR.clicktorollthisskill"}}, {{localize "CPR.pressdeletetoreset"}}">
          {{#if skill.data.data.core}}{{localize (splitJoinCoreSkills skill.name)}}{{else}}{{skill.name}}{{/if}}
            {{#if (compare (systemConfig "mookSheetSkillDisplay") "===" "level")}}
              (+{{skill.data.data.level}}){{#unless @last}},{{/unless}}
            {{/if}}
            {{#if (compare (systemConfig "mookSheetSkillDisplay") "===" "base")}}
              (+{{math "sum" skill.data.data.level (getSkillStat skill ../actor)}}){{#unless @last}},{{/unless}}
            {{/if}}
            {{#if (compare (systemConfig "mookSheetSkillDisplay") "===" "total")}}
              (+{{math "sum" skill.data.data.level (getSkillStat skill ../actor) skill.data.data.skillmod}}){{#unless @last}},{{/unless}}
            {{/if}}
        </a>
        {{#if (compare skill.data.data.core "===" false)}}
          <a class="item-edit skill-custom" title="{{localize "CPR.editcustomskill"}}"><i class="fas fa-edit"></i></a>
        {{/if}}
      </span>
    {{/if}}
  {{/each}}
</div>
{{trace "END CPR-MOOK-SKILLS.HBS"}}
