{{trace "CPR-REPAIR-GLYPH.HBS"}}
{{#if (compare data.data.isBodyLocation "||" data.data.isHeadLocation)}}
    {{#if (compare data.data.bodyLocation.ablation ">" 0)}}
        <a class="repair" data-item-id="{{data._id}}">
            <i class="fas fa-tools" title={{localize "CPR.global.sheets.actions.repair"}}></i>
        </a>
    {{else}}
        {{#if (compare data.data.headLocation.ablation ">" 0)}}
            <a class="repair" data-item-id="{{data._id}}">
                <i class="fas fa-tools" title={{localize "CPR.global.sheets.actions.repair"}}></i>
            </a>
        {{/if}}
    {{/if}}
{{/if}}
{{#if data.data.isShield}}
    {{#if (compare data.data.shieldHitPoints.value "<" data.data.shieldHitPoints.max)}}
        <a class="repair" data-item-id="{{data._id}}">
        <i class="fas fa-tools" title={{localize "CPR.global.sheets.actions.repair"}}></i>
        </a>
    {{/if}}
{{/if}}
{{trace "END CPR-REPAIR-GLYPH.HBS"}}
