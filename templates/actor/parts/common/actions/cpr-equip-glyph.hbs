{{trace "CPR-EQUIP-GLYPH.HBS"}}
<a class="equip" data-item-prop="data.equipped">
    {{#if (compare data.data.equipped "===" "equipped")}}
    <i class="fas fa-hand-paper" title={{localize "CPR.global.EquipState.equipped" }} style="width:14px;height:14px;text-align:left;"></i>
    {{/if}}
    {{#if (compare data.data.equipped "===" "carried")}}
    <i class="fas fa-suitcase" title={{localize "CPR.global.EquipState.carried" }} style="width:14px;height:14px;text-align:left;"></i>
    {{/if}}
    {{#if (compare data.data.equipped "===" "owned")}}
    <i class="fas fa-circle-notch" title={{localize "CPR.global.EquipState.owned" }} style="width:14px;height:14px;text-align:left;"></i>
    {{/if}}
</a>
{{trace "END CPR-EQUIP-GLYPH.HBS"}}
