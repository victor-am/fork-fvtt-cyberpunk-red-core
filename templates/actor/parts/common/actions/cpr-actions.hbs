{{trace "CPR-ACTIONS.HBS"}}
{{#if (compare type "===" "weapon")}}
{{!-- LOAD/RELOAD ACTION --}}
{{#if data.data.isRanged}}
{{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-reload-glyph.hbs"}}
{{/if}}
{{!-- CONCEAL ACTION
{{#if data.concealable}}
<i class="fas fa-eye-slash" title="Toggle Conceal"></i>
{{/if}}
--}}
{{/if}}
{{#if (compare type "===" "cyberware")}}
{{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-install-cyberware-glyph.hbs"}}
{{/if}}
{{#if (compare type "===" "cyberdeck")}}
{{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-install-programs-glyph.hbs"}}
{{/if}}
{{#if (compare type "===" "armor")}}
{{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-repair-glyph.hbs"}}
{{/if}}
{{#if (listContains "weapon,armor,gear,clothing,cyberdeck" type)}}
{{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-equip-glyph.hbs"}}
{{/if}}
<a class="item-action" data-action-type="favorite" title="{{localize "CPR.togglepin"}}">
    {{#if data.data.favorite}}
    <i class="fas fa-thumbtack fg-black favorite"></i>
    {{else}}
    <i class="fas fa-thumbtack fg-grey"></i>
    {{/if}}
</a>
{{!-- ITEM MANAGEMENT --}}
{{#if (isUpgradable type)}}
  {{#if data.data.isUpgraded}}
    {{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-upgrade-glyph.hbs"}}
  {{else}}
    {{#unless (isEmpty (filter (filter actor.data.filteredItems.itemUpgrade "data.data.type" type) "data.data.isInstalled" false))}}
      {{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-upgrade-glyph.hbs"}}
    {{/unless}}
  {{/if}}
{{/if}}
<a class="item-action" data-action-type="delete"><i class="fas fa-trash-alt fg-red" title="{{localize "CPR.deleteitem"}}"></i></a>
{{trace "END CPR-ACTIONS.HBS"}}
