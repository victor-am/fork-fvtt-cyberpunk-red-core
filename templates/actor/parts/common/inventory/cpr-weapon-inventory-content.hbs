{{log "CPR-WEAPON-INV-CONTENT.HBS"}}
<tr class="item" data-item-id={{this._id}}>
    <td class="name"><a class="name rollable" data-roll-type="{{this.type}}" data-roll-title="{{this.type}}"
            data-item-id={{this._id}}>
            {{this.name}}</a>
        <a class="item-edit"><i class="fas fa-edit"></i></a>
        <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
    </td>
    <td class="item inventory-center">{{localize (findConfigValue "weaponTypeList" this.data.weaponType)}}</td>
    <td class="item inventory-center">
        {{this.data.magazine.ammoId}} ({{this.data.magazine.value}}/{{this.data.magazine.max}})
    </td>
    <td class="item inventory-center">
        {{> "systems/cyberpunk-red-core/templates/actor/parts/common/cpr-equip-glyph.hbs"}}
        {{#if this.data.isRanged}}
        {{#if (lt this.data.magazine.value this.data.magazine.max)}}
        {{#if (ne this.data.magazine.ammoId "")}}
        <a class="item-action" data-item-id="{{this._id}}" data-action="reload-ammo"><i class="fas fa-redo-alt"
                title="Reload"></i></a>
        {{/if}}
        {{/if}}
        <a class="item-action" data-item-id="{{this._id}}" data-action="new-ammo"><i class="fas fa-exchange-alt"
                title="Change Ammo"></i></a>
        {{/if}}
        {{#if this.data.concealable}}
        <i class="fas fa-eye-slash" title="Toggle Conceal"></i>
        {{/if}}
    </td>
</tr>
{{log "END CPR-WEAPON-INV-CONTENT.HBS"}}