{{log "CPR-WEAPON-INV-CONTENT.HBS"}}
<div class="row row-section item inventory" data-item-id={{this._id}}>
    <span class="name"><a class="name">
            {{this.name}}</a>
        <a class="item-edit"><i class="fas fa-edit"></i></a>
        <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
    </span>
    <span class="inventory-center">{{localize (findConfigValue "weaponTypeList" this.data.weaponType)}}</span>
    <span class="inventory-center">
        {{#if this.data.isRanged}}
        {{this.data.magazine.ammoId}} ({{this.data.magazine.value}}/{{this.data.magazine.max}})
        {{/if}}
    </span>
    <span class="inventory-center">
        {{!-- EQUIP ACTION --}}
        {{> "systems/cyberpunk-red-core/templates/actor/parts/common/inventory/actions/cpr-equip-glyph.hbs"}}

        {{!-- LOAD ACTION --}}
        {{#if this.data.isRanged}}
        {{#if (lt this.data.magazine.value this.data.magazine.max)}}
        {{#if (ne this.data.magazine.ammoId "")}}
        <a class="item-action" data-item-id="{{this._id}}" data-action="reload-ammo"><i class="fas fa-redo-alt" title="Reload"></i></a>
        {{/if}}
        {{/if}}
        <a class="item-action" data-item-id="{{this._id}}" data-action="new-ammo"><i class="fas fa-exchange-alt" title="Change Ammo"></i></a>
        {{/if}}

        {{!-- CONCEAL ACTION --}}
        {{#if this.data.concealable}}
        <i class="fas fa-eye-slash" title="Toggle Conceal"></i>
        {{/if}}
    </span>
</div>
{{log "END CPR-WEAPON-INV-CONTENT.HBS"}}