{{log "CPR-ARMOR-INV-CONTENT.HBS"}}
<div class="section name width-quarter hide-overflow">
    <a class="name item-edit">{{item.name}}</a>
</div>
<div class="section data width-grow hide-overflow">
    {{#if item.data.isHeadLocation}}
        <span></span>{{localize "CPR.head"}}: {{ablated item.data "head"}} {{localize "CPR.of"}} {{item.data.headLocation.sp}} {{localize "CPR.sp"}}</span>
        {{#if item.data.isBodyLocation}}
            <span>| </span>
        {{/if}}
    {{/if}}
    {{#if item.data.isBodyLocation}}
        <span></span>{{localize "CPR.bodylocation"}}: {{ablated item.data "body"}} {{localize "CPR.of"}} {{item.data.bodyLocation.sp}} {{localize "CPR.sp"}}</span>
    {{/if}}
</div>
{{log "END CPR-ARMOR-INV-CONTENT.HBS"}}