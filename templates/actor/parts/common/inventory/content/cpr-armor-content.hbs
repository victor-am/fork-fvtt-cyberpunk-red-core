{{log "CPR-ARMOR-INV-CONTENT.HBS"}}
<tr class="item" data-item-id={{this._id}}>
    <td class="name"><a class="name">
            {{this.name}}</a>
        <a class="item-edit"><i class="fas fa-edit"></i></a>
        <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
    </td>
    <td class="inventory-center">
        {{#if this.data.isHeadLocation}}
        <div></div>Head SP/Ablation: {{this.data.headLocation.sp}}/{{this.data.headLocation.ablation}}</div>
        {{/if}}
        {{#if this.data.isBodyLocation}}
        <div></div>Body SP/Ablation: {{this.data.bodyLocation.sp}}/{{this.data.bodyLocation.ablation}}</div>
        {{/if}}
        
    </td>
    <td class="inventory-center"></td>
    <td class="inventory-center">
        {{> "systems/cyberpunk-red-core/templates/actor/parts/common/inventory/actions/cpr-equip-glyph.hbs"}}
    </td>
</tr>
{{log "END CPR-ARMOR-INV-CONTENT.HBS"}}