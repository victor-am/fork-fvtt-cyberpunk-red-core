{{log "CPR-AMMO-INV-CONTENT.HBS"}}
<div class="row white-bg black-fg" data-item-id={{this._id}}>
    <div class="row-section name text-align-left">
        <a class="name">{{this.name}}</a>
        {{#if (gt this.data.amount 0 )}}
        ({{this.data.amount}})
        {{/if}}
        <a class="item-edit"><i class="fas fa-edit"></i></a>
        <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
    </div>
    <div class="row-section data text-align-left">
        {{localize (findConfigValue "ammoVariety" this.data.variety)}}
        |
        {{localize (findConfigValue "ammoType" this.data.type)}}
    </div>
    <div class="row-section action text-align-right">

    </div>
</div>
{{log "END CPR-AMMO-INV-CONTENT.HBS"}}