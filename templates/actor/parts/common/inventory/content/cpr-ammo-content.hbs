{{log "CPR-AMMO-INV-CONTENT.HBS"}}
{{log this}}
<div class="row flex-end inventory item white-bg black-fg" data-item-id={{_id}}>
    <div class="section name width-quarter hide-overflow">
        <span class="name item-edit">{{name}}</span>
        {{#if (gt data.amount 0 )}}&nbsp;&nbsp;x{{data.amount}}{{/if}}
    </div>
    <div class="section data width-grow hide-overflow">
        {{localize (findConfigValue "ammoVariety" data.variety)}}
        |
        {{localize (findConfigValue "ammoType" data.type)}}
    </div>
    <div class="section action right-text width-fit">
        <a class="item-delete"><i class="fas fa-trash-alt red-fg" title="Delete Item"></i></a>
    </div>
    <div class="section action right-text width-fit width-no-shrink">
        {{> "systems/cyberpunk-red-core/templates/actor/parts/common/inventory/actions/cpr-actions.hbs" item}}
    </div>
</div>
{{log "END CPR-AMMO-INV-CONTENT.HBS"}}