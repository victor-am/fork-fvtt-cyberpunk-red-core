{{log "CPR-AMMO-INV-CONTENT.HBS"}}
<div class="row white-bg black-fg" data-item-id={{this._id}}>
    <div class="section name width-quarter">
        <a class="name item-edit">{{this.name}}</a>
        {{#if (gt this.data.amount 0 )}}
        ({{this.data.amount}})
        {{/if}}
    </div>
    <div class="section data hide-overflow width-grow width-shrink">
      <i class="fas fa-grip-lines-vertical"></i>
        {{localize (findConfigValue "ammoVariety" this.data.variety)}}
        <i class="fas fa-grip-lines-vertical"></i>
        {{localize (findConfigValue "ammoType" this.data.type)}}
    </div>
    <div class="section action right-text width-fit">
        <a class="item-delete"><i class="fas fa-trash-alt red-fg"></i></a>
    </div>
</div>
{{log "END CPR-AMMO-INV-CONTENT.HBS"}}