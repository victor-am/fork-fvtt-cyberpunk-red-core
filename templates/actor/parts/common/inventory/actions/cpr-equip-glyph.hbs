{{log "CPR-EQUIP-GLYPH.HBS"}}
<a class="equip" data-item-id="{{item._id}}" data-item-prop="data.equippable.equipped">
    
    {{#if (compare item.data.equippable.equipped "===" "equipped")}}
    
    <i class="fas fa-hand-paper" title={{localize "CPR.equipped" }}></i>
    {{/if}}

    {{#if (compare item.data.equippable.equipped "===" "carried")}}
    
    <i class="fas fa-suitcase" title={{localize "CPR.carried" }}></i>
    {{/if}}

    {{#if (compare item.data.equippable.equipped "===" "owned")}}
    
    <i class="fas fa-circle-notch" title={{localize "CPR.owned" }}></i>
    {{/if}}
</a>
{{log "END CPR-EQUIP-GLYPH.HBS"}}