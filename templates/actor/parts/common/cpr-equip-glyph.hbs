<div>
    <a class="equip" curr_equip="{{data.equippable.equipped}}" item_id="{{this._id}}">
        {{#ifEquals data.equippable.equipped "equipped" }}
            <i class="fas fa-hand-paper" title={{localize "CPR.equipped" }}></i>
        {{/ifEquals}}
        {{#ifEquals data.equippable.equipped "carried"}}
            <i class="fas fa-suitcase" title={{localize "CPR.carried" }}></i>
        {{/ifEquals}}
        {{#ifEquals data.equippable.equipped "owned"}}
            <i class="fas fa-circle-notch" title={{localize "CPR.owned" }}></i>
        {{/ifEquals}}
    </a>
</div>
