{{log "CPR-SKILLS.HBS"}}
<div class="tab-block skills">
  {{!-- FOR ALL SKILL ITEMS, RENDER SKILL CARD --}}
  {{!-- FOR EACH CATEGORY --}}
  {{#each (findConfigObj "skillCategories") as |category c|}}
  <div class="row row-header skills">
    <span class="row-section skill-name">{{localize (findConfigValue "skillCategories" c)}}</span>
    <span class="row-section skill-level">LVL</span>
    {{!-- <span class="skill-stat">STAT</span> --}}
    <span class="row-section skill-base">BASE</span>
  </div>
  {{#each (sort ../actor.filteredItems.skill "name") as |skill s|}}
  {{!-- IF SKILL IS OF CATEGORY --}}
  {{#if (eq skill.data.category c)}}
  {{!-- DISPLAY SKILL --}}
  <div class="row border-red item skills" data-item-id={{skill._id}}>
    <div class="row-section skill-name">
      <a class="name rollable" data-roll-type="skill" data-roll-title="{{skill.name}}">
        <span class="{{#if skill.data.basic}}bold{{/if}}">
          {{skill.name}} {{#if (eq skill.data.difficulty "difficult")}}(x2) {{/if}}<strong>({{localize (findConfigValue "statList" skill.data.stat)}})</strong>
        </span>
      </a>
      {{#if (eq skill.data.core false)}}
      <a class="item-edit"><i class="fas fa-edit"></i></a>
      <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
      {{/if}}
    </div>
    <span class="row-section skill-level"><input class="skill-level-input" value="{{skill.data.level}}" type="number" data-item-prop="data.level" data-dtype="Number"></span>
    <span class="row-section skill-base">{{add skill.data.level (lookup (getProp ../../actor.data.stats skill.data.stat) 'value')}}</span>
  </div>
  {{/if}}
  {{/each}}
  {{/each}}
</div>
{{log "END CPR-SKILLS.HBS"}}