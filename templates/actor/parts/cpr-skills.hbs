{{log "CPR-SKILLS.HBS"}}
<div class="tab-block">
      {{!-- FOR ALL SKILL ITEMS, RENDER SKILL CARD --}}
      {{!-- FOR EACH CATEGORY --}}
      {{#each (findConfigObj "skillCategories") as |category c|}}
      <div class="row header">
        <span class="skill-name">{{localize (findConfigValue "skillCategories" c)}}</span>
        <span class="skill-level">LVL</span>
        {{!-- <span class="skill-stat">STAT</span> --}}
        <span class="skill-base">BASE</span>
      </div>

      {{#each ../actor.filteredItems.skill as |skill s|}}
      {{!-- IF SKILL IS OF CATEGORY --}}
      {{#if (eq skill.data.category c)}}
      {{!-- DISPLAY SKILL --}}
      <div class="row item" data-item-id={{skill._id}}>
        <div class="skill-name">
          <a class="name rollable" data-roll-type="skill"
            data-roll-title="{{skill.name}}">
            <span class="{{#if skill.data.basic}}bold{{/if}}">
              {{skill.name}} <strong>({{localize (findConfigValue "statList" skill.data.stat)}})</strong>
            </span>
          </a>
          {{#if (eq skill.data.core false)}}
          <a class="item-edit"><i class="fas fa-edit"></i></a>
          <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
          {{/if}}
        </div>
        <span class="skill-level"><input class="skill-level-input" value="{{skill.data.level}}" type="number" data-item-prop="data.level" data-dtype="Number"></span>
        <span class="skill-base">{{add skill.data.level (lookup (getProp ../../actor.data.stats skill.data.stat) 'value')}}</span>
      </div>
      {{/if}}
      {{/each}}
      {{/each}}
</div>
{{log "END CPR-SKILLS.HBS"}}