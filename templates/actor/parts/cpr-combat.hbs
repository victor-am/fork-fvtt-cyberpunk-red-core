<div>
   <div><h1>Attack</h1>
      {{#each actor.filteredItems.weapon as |weapon|}}
      
      <div style="display: flex; justify-content: space-between">
         <span>{{weapon.name}}</span>
         <span>
            <a 
            class="rollable" 
            data-attack-skill="{{weapon.data.weaponSkill}}" 
            data-is-ranged="{{weapon.data.isRanged}}" 
            data-roll-type="attack" 
            data-roll-title="{{weapon.name}} attack!"
            data-weapon-name="{{weapon.name}}"
            data-item-id={{weapon._id}}>
               [ATTACK]
               <i class="fas fa-dice"></i>
            </a>
         </span>
         <span>
            <a 
            class="rollable" 
            data-damage="{{weapon.data.damage}}" 
            data-roll-type="damage">
               [{{weapon.data.damage}}]
            </a>
         </span>
         <span>ROF {{weapon.data.rof}}</span>
         <span>{{weapon.data.magSize}} rounds</span>
      </div>
      {{/each}}
   </div>
   <div><h1>Defense</h1>
      {{#each actor.filteredItems.armor as |armor| }}
      
      <div>
         <span>{{armor.name}}</span>
         <span>{{armor.data.sp}}</span>
         <span>{{armor.data.ablation}}</span>
         <span><a class="rollable">[DEFEND]</a></span>
      </div>
      {{/each}}
   </div>
</div>