<div class="weapons">
  <div class="bold black-bg white-fg center-text">{{localize "CPR.weapons"}}</div>
  <div class="dynamic-list">
    {{#each actor.filteredItems.weapon as |weapon|}}
    {{#if (eq weapon.data.equippable.equipped "equipped")}}
    <div class="item row" data-item-id={{weapon._id}}>

      <div class="section width-third" ><a class="item-edit">{{weapon.name}}</a></div>

      <div class="section width-fit width-no-grow center-text">
        <a class="rollable smallest-text" data-roll-type="attack" data-aimed="false" data-item-id={{weapon._id}}>
          <i class="fas fa-dice-d20  red-fg" title="Standard Attack" style="padding-top: 3px;"></i>
        </a>
      </div>

      <div class="section width-fit width-no-grow center-text">
        <a class="rollable" data-roll-type="attack" data-aimed="true" data-item-id={{weapon._id}}>
          <i class="fas fa-crosshairs red-fg" title="Aimed Attack"></i>
        </a>
      </div>

      <div class="section width-fit width-no-grow center-text">
        <a class="rollable" data-damage="{{weapon.data.damage}}" data-roll-type="damage" data-item-id={{weapon._id}}>
          <i class="fas fa-tint red-fg" title="Damage"></i>
        </a>
      </div>
      
      <div class="section width-eighth width-no-grow center-text">{{#if weapon.data.isRanged}}{{weapon.data.magazine.value}}/{{weapon.data.magazine.max}}{{/if}}</div>
      
      <div class="section width-eighth width-no-grow center-text">{{localize "CPR.rof"}} {{weapon.data.rof}}</div>

      <div class="section width-sixth">
        {{!-- TODO iterate over an array of fire modes and create <a> for each --}}
        {{weapon.data.altFireModes}}
      </div>
    </div>
    {{/if}}
    {{/each}}
  </div>
</div>



<div class="armor">
  <div class=" bold black-bg white-fg center-text">{{localize "CPR.armor"}}</div>
  {{#each actor.filteredItems.armor as |armor| }}
  {{#if (eq armor.data.equippable.equipped "equipped")}}
  <div class="item row">
    <div>
      <span>{{armor.name}}</span>
      <span>{{armor.data.sp}}</span>
      <span>{{armor.data.ablation}}</span>
      ABLATE_PLACEHOLDER
    </div>
  </div>
  {{/if}}
  {{/each}}
</div>



