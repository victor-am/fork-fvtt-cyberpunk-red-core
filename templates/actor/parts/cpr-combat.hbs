{{log "CPR-COMBAT.HBS"}}
<div>
   <div>
      <h1>Attack</h1>
      <table>
         {{#each actor.filteredItems.weapon as |weapon|}}
         <tr class="item row">
            {{#if (eq weapon.data.equippable.equipped "equipped")}}

            <div style="display: flex; justify-content: space-between">
               <td><span>{{weapon.name}}</span></td>
               <td><span>
                     <a class="rollable" data-attack-skill="{{weapon.data.weaponSkill}}"
                        data-is-ranged="{{weapon.data.isRanged}}" data-roll-type="attack"
                        data-roll-title="{{weapon.name}} attack!" data-weapon-name="{{weapon.name}}"
                        data-item-id={{weapon._id}}>
                        [ATTACK]
                        <i class="fas fa-dice"></i>
                     </a>
                  </span>
               </td>
               <td><span>
                     <a class="rollable" data-damage="{{weapon.data.damage}}" data-roll-type="damage"
                        data-item-id={{weapon._id}}>
                        [DAMAGE]
                        <i class="fas fa-dice"></i>
                     </a>
                  </span>
               </td>
               <td><span>ROF {{weapon.data.rof}}</span></td>
               <td>
                  {{#if weapon.data.isRanged}}
                  <span>{{weapon.data.magazine.value}}/{{weapon.data.magazine.max}} rounds</span>
                  {{/if}}
               </td>
            </div>
            {{/if}}
         </tr>
         {{/each}}
      </table>
   </div>
   <div>
      <h1>Defense</h1>
      <table>
         <tr class="item row" data-item-id="{{getObjId actor.filteredItems.skill "name" "Brawling" }}">
            <td class="item row" data-item-id="{{getObjId actor.filteredItems.skill "name" "Brawling" }}"><a class="name rollable" data-roll-type="skill" data-roll-title="Brawling">Brawling</a></td>
            <td class="item row" data-item-id="{{getObjId actor.filteredItems.skill "name" "Brawling" }}" colspan="3">Choombah, defend against a grapple!</td>
         </tr>
         {{log actor}}
         <tr class="item row" data-item-id="{{getObjId actor.filteredItems.skill "name" "Evasion" }}">
            <td class="item row" data-item-id="{{getObjId actor.filteredItems.skill "name" "Evasion" }}"><a class="name rollable" data-roll-type="skill" data-roll-title="Evasion">Evasion</a></td>
            <td class="item row" data-item-id="{{getObjId actor.filteredItems.skill "name" "Evasion" }}" colspan="3">Choombah, defend against Martial Arts{{#if (gte actor.data.stats.ref.value 8)}} or Dodge Bullets{{/if}}!</td>
         </tr>
         {{#each actor.filteredItems.armor as |armor| }}
         {{#if (eq armor.data.equippable.equipped "equipped")}}
         <tr class="item row">
            <div>
               <td><span>{{armor.name}}</span></td>
               <td><span>{{armor.data.sp}}</span></td>
               <td><span>{{armor.data.ablation}}</span></td>
               <td></td>
            </div>
         </tr>
         {{/if}}
         {{/each}}
      </table>
   </div>
</div>
{{log "END CPR-COMBAT.HBS"}}