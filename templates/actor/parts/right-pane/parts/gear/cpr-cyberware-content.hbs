{{log "CPR-CYBERWARE-INV-CONTENT.HBS"}}
{{#unless item.data.isInstalled}}
<li class="item flexrow{{#if item.data.favorite}} favorite{{/if}}" data-item-id="{{item._id}}"
  data-item-category="{{item.type}}" draggable="true">
  <div class="item-name gear-name text-nowrap">
    <a class="name item-edit" title="{{item.name}}&#13Click to view the item&#13Ctrl-Click to send to chat">{{item.name}}</a>
  </div>
  <div class="item-detail gear-data text-nowrap">
        {{localize (findConfigValue "cyberwareTypeList" item.data.type)}}
        {{#if item.data.isFoundational}}
        {{#if (compare item.data.optionSlots ">" 0)}}
        ({{localize "CPR.foundational"}})
        {{/if}}
        {{/if}}
  </div>
  <div class="item-detail gear-actions text-nowrap">
    {{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-actions.hbs" item}}
  </div>
</li>
{{/unless}}
{{log "END CPR-CYBERWARE-INV-CONTENT.HBS"}}