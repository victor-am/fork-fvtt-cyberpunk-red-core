{{cprTrace "CPR-ARMOR-CONTENT.HBS"}}
<li class="item flexrow{{#if item.system.favorite}} favorite{{else}}{{#if (cprListContains sheet.options.collapsedSections "gearTab-armor")}} hide{{/if}}{{/if}}" data-item-id="{{item._id}}"
  data-item-category="{{item.type}}" draggable="true">
  <div class="item-name gear-name text-nowrap">
    <a class="name item-edit" title="{{item.name}}&#13{{localize "CPR.characterSheet.bottomPane.fight.clickToViewTheItem"}}&#13{{localize "CPR.characterSheet.bottomPane.fight.controlClickToSendToChat"}}">{{item.name}}{{#if item.system.isUpgraded}}<sup><i class="fab fa-uniregistry"></sup></i>{{/if}}</a>
  </div>
  <div class="item-detail gear-data text-nowrap">
        {{#if item.system.isHeadLocation}}
        {{localize "CPR.global.location.head"}}: {{cprMath "subtract" (cprApplyUpgrade item item.system.headLocation.sp "headSp") item.system.headLocation.ablation}}/{{cprApplyUpgrade item item.system.headLocation.sp "headSp"}} {{localize "CPR.characterSheet.rightPange.armor.sp"}}
        {{#if item.system.isBodyLocation}}|{{/if}}
        {{/if}}
        {{#if item.system.isBodyLocation}}
        {{localize "CPR.global.location.body"}}: {{cprMath "subtract" (cprApplyUpgrade item item.system.bodyLocation.sp "bodySp") item.system.bodyLocation.ablation}}/{{cprApplyUpgrade item item.system.bodyLocation.sp "bodySp"}} {{localize "CPR.characterSheet.rightPange.armor.sp"}}
        {{/if}}
        {{#if item.system.isShield}}
        {{localize "CPR.global.generic.shield"}}: {{item.system.shieldHitPoints.value}}/{{cprApplyUpgrade item item.system.shieldHitPoints.max "shieldHp"}} {{localize "CPR.global.generic.hitpoints"}}
        {{/if}}
  </div>
  <div class="item-detail gear-actions text-nowrap">
    {{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-actions.hbs" item}}
  </div>
</li>
{{cprTrace "END CPR-ARMOR-CONTENT.HBS"}}
