{{trace "CPR-DEATHSAVE-BLOCK.HBS"}}
<div class="deathsave-block main-block">
  <div class="block-label text-small flex-space-between">
    <span class="text-padding-left">{{localize "CPR.woundstate"}}</span>
    <span class="text-padding-right" title="{{localize "CPR.deathsaveroll"}}"><a class="rollable"  data-roll-title="{{localize "CPR.deathsave"}}" data-roll-type="deathsave">{{localize "CPR.deathsave"}}</a></span>
  </div>
  <div class="block-data flex-space-between">
    {{!-- <span>{{localize (findConfigValue "woundState" this.data.woundState.currentWoundState)}}</span> --}}
    {{#with this.data.woundState.currentWoundState as |state| }}
    {{#if (compare state "===" "notWounded")}}
    <i class="fg-green bg-white text-normal text-center width-full fas fa-smile" title="Not Wounded"></i>
    {{/if}}
    {{#if (compare state "===" "lightlyWounded")}}
    <i class="fg-orange bg-white text-normal text-center width-full fas fa-meh" title="Lightly Wounded"></i>
    {{/if}}
    {{#if (compare state "===" "seriouslyWounded")}}
    <i class="fg-red bg-white text-normal text-center width-full fas fa-frown" title="Seriously Wounded"></i>
    {{/if}}
    {{#if (compare state "===" "mortallyWounded")}}
    <i class="fg-black bg-white text-normal text-center width-full fas fa-skull" title="Mortally Wounded"></i>
    {{/if}}
    {{/with}}
    <span class="width-full" title="{{localize "CPR.deathsavereset"}}
    {{localize "CPR.deathpenalty"}}: {{data.derivedStats.deathSave.penalty}}
    {{localize "CPR.criticalinjuries"}} {{localize "CPR.penalty"}}: {{data.derivedStats.deathSave.basePenalty}}"><a class="reset-value text-bold" data-value="deathsave">{{data.derivedStats.deathSave.value}}</a></span>
  </div>
</div>
{{trace "END CPR-DEATHSAVE-BLOCK.HBS"}}