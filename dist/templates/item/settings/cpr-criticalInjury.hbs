{{cprTrace "START ITEM SETTINGS CPR-CRITICALINJURY.HBS"}}
{{!-- Critical Injury Location Settings--}}
<li class="item flexrow">
    <div class="item flexrow setting-name text-nowrap">
        {{localize "CPR.global.itemTypes.criticalInjury"}} {{localize "CPR.rolls.location"}}
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
        <select name="system.location" data-dtype="{{item.system.location}}">
            {{#select item.system.location}}
                {{#each (cprFindConfigObj "criticalInjuryLocation") as |location l|}}
                    <option value="{{l}}">{{localize location}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
</li>

{{!-- Critical Injury Quick Fix Type Settings--}}
<li class="item flexrow">
    <div class="item flexrow setting-name text-nowrap">
        {{localize "CPR.global.criticalInjury.quickfix"}} {{localize "CPR.global.generic.type"}}
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
        <select name="system.quickFix.type" data-dtype="{{item.system.quickFix.type}}">
            {{#select item.system.quickFix.type}}
                {{#each (cprFindConfigObj "criticalInjuryQuickFix") as |quickfix q|}}
                    <option value="{{q}}">{{localize quickfix}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
</li>

{{!-- Critical Injury Quick Fix DV Settings--}}
{{#if (cprCompare item.system.quickFix.type "===" "paramedic")}}
    <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
            {{localize "CPR.global.criticalInjury.quickfix"}} {{localize "CPR.itemSheet.criticalInjury.dv"}}
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
            <input name="system.quickFix.dvParamedic" class="" type="number" value="{{item.system.quickFix.dvParamedic}}">
        </div>
    </li>
{{/if}}
{{#if (cprCompare item.system.quickFix.type "===" "firstAidParamedic")}}
    <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
            {{localize "CPR.global.criticalInjury.quickfix"}} {{localize "CPR.itemSheet.criticalInjury.dv"}}
            ({{localize "CPR.global.skills.firstAid"}})
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
            <input name="system.quickFix.dvFirstAid" class="" type="number" value="{{item.system.quickFix.dvFirstAid}}">
        </div>
    </li>
    <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
            {{localize "CPR.global.criticalInjury.quickfix"}} {{localize "CPR.itemSheet.criticalInjury.dv"}}
            ({{localize "CPR.global.skills.paramedic"}})
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
            <input name="system.quickFix.dvParamedic" class="" type="number" value="{{item.system.quickFix.dvParamedic}}">
        </div>
    </li>
{{/if}}

{{!-- Critical Injury Treatment Type Settings--}}
<li class="item flexrow">
    <div class="item flexrow setting-name text-nowrap">
        {{localize "CPR.itemSheet.criticalInjury.treatment"}} {{localize "CPR.global.generic.type"}}
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
        <select name="system.treatment.type" data-dtype="{{item.system.treatment.type}}">
            {{#select item.system.treatment.type}}
                {{#each (cprFindConfigObj "criticalInjuryTreatment") as |treatment t|}}
                    <option value="{{t}}">{{localize treatment}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
</li>

{{!-- Critical Injury Treatment DV Settings--}}
{{#if (cprCompare item.system.treatment.type "===" "surgery")}}
    <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
            {{localize "CPR.itemSheet.criticalInjury.treatment"}} {{localize "CPR.itemSheet.criticalInjury.dv"}}
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
            <input name="system.treatment.dvSurgery" class="" type="number" value="{{item.system.treatment.dvSurgery}}">
        </div>
    </li>
{{/if}}
{{#if (cprCompare item.system.treatment.type "===" "paramedicSurgery")}}
    <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
            {{localize "CPR.itemSheet.criticalInjury.treatment"}} {{localize "CPR.itemSheet.criticalInjury.dv"}} ({{localize "CPR.global.skills.paramedic"}})
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
            <input name="system.treatment.dvParamedic" class="" type="number" value="{{item.system.treatment.dvParamedic}}">
        </div>
    </li>
    <li class="item flexrow">
        <div class="item flexrow setting-name text-nowrap">
            {{localize "CPR.itemSheet.criticalInjury.treatment"}} {{localize "CPR.itemSheet.criticalInjury.dv"}} ({{localize "CPR.global.role.medtech.ability.surgery"}})
        </div>
        <div class="item flexrow setting-value text-nowrap item-end">
            <input name="system.treatment.dvSurgery" class="" type="number" value="{{item.system.treatment.dvSurgery}}">
        </div>
    </li>
{{/if}}

{{!-- Critical Injury Base Death Save Increase Settings--}}
<li class="item flexrow">
    <div class="item flexrow setting-name text-nowrap">
        {{localize "CPR.itemSheet.criticalInjury.criticalInjuryDeathSave"}}
    </div>
    <div class="item flexrow setting-value text-nowrap item-end">
        {{#if item.system.deathSaveIncrease}}
            <a class="item-checkbox" data-target="system.deathSaveIncrease"><i class="far fa-check-circle"></i></a>
        {{else}}
            <a class="item-checkbox" data-target="system.deathSaveIncrease"><i class="far fa-circle"></i></a>
        {{/if}}
    </div>
</li>
{{cprTrace "END CPR-CRITICALINJURY.HBS"}}
