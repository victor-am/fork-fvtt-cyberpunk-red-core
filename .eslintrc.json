{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-warning-comments": [
            "warn",
            {
                "terms": [
                    "TODO"
                ]
            }
        ],
        "quotes": [
            "warn",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "no-underscore-dangle": "off",
        "max-len": [
            "warn",
            {
                "code": 120,
                "comments": 120
            }
        ],
        "no-param-reassign": [
            "warn"
        ],
        "class-methods-use-this": [
            "warn"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-restricted-syntax": [
            "warn"
        ],
        "linebreak-style": 0,
        "import/extensions": ["warn", "always"]

    },
    "settings": {
        "import/extensions": [
            ".js"
        ]
    }
}