{{cprTrace "START ACTOR PARTS RIGHT-PANE PARTS GEAR CPR-WEAPON-CONTENT.HBS"}}
{{!-- NAME --}}
<li class="item flexrow{{#if item.system.favorite}} favorite{{else}}{{#if (cprListContains sheet.options.collapsedSections "gearTab-weapon")}} hide{{/if}}{{/if}}" data-item-id="{{item._id}}"
  data-item-category="{{item.type}}" draggable="true">
  <div class="item-name gear-name text-nowrap">
    <a class="name item-edit flex-center" title="{{item.name}}&#13{{localize "CPR.characterSheet.bottomPane.fight.clickToViewTheItem"}}&#13{{localize "CPR.characterSheet.bottomPane.fight.controlClickToSendToChat"}}">
      <img src="{{item.img}}" class="gear-icon">
      {{item.name}}{{#if item.system.isUpgraded}}<sup><i class="fa-solid fa-square-up"></sup></i>{{/if}}
    </a>
  </div>
  <div class="item-detail gear-data text-nowrap">
    {{localize (cprFindConfigValue "weaponTypeList" item.system.weaponType)}}
    {{#if item.system.isRanged}}
    {{#if item.system.magazine.ammoId}}
    |
    ({{item.system.magazine.value}}/{{cprApplyUpgrade item item.system.magazine.max "magazine"}})
    {{cprGetProp (cprGetOwnedItem actor item.system.magazine.ammoId) "name"}}
    {{/if}}
    {{/if}}
  </div>
  <div class="item-detail gear-actions text-nowrap">
    {{> "systems/cyberpunk-red-core/templates/actor/parts/common/actions/cpr-actions.hbs" item}}
  </div>
</li>
{{cprTrace "END CPR-WEAPON-CONTENT.HBS"}}
