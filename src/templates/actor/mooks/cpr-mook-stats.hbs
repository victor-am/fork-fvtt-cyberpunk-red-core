{{cprTrace "START ACTOR MOOKS CPR-MOOK-STATS.HBS"}}
{{!-- Partials to create stat-units from template --}}
{{#each actor.system.stats as |stat s|}}
  <div class="mook-{{s}}-stat">
    <div>
      <a class="rollable" data-roll-type="stat" data-roll-title="{{s}}" title="{{localize CPR.clicktorollthisstat}}">
        {{localize (cprFindConfigValue "statList" s)}}
      </a>
    </div>
    <div class="block-data text-large">
      {{#if (cprCompare s "!==" "luck")}}
      <input class="" name="system.stats.{{s}}.value" type="number" value="{{this.value}}"/>
      {{else}}
      <input class="" name="dash" type="text" readonly value="-"/>
      {{/if}}
    </div>
  </div>
{{/each}}
{{cprTrace "END CPR-MOOK-STATS.HBS"}}
